{
    "name": "formilk",
    "description": "Design system created with Atomico",
    "version": "0.0.3",
    "type": "module",
    "types": "./formilk.d.ts",
    "exports": {
        ".": "./dest/formilk.js",
        "./theme.css": "./components/formilk.css",
        "./button": "./dest/button.js",
        "./card": "./dest/card.js",
        "./input-basic": "./dest/input-basic.js",
        "./input-checkbox": "./dest/input-checkbox.js",
        "./input-color": "./dest/input-color.js",
        "./input-radio": "./dest/input-radio.js",
        "./input-select": "./dest/input-select.js",
        "./input-toggle": "./dest/input-toggle.js",
        "./label": "./dest/label.js"
    },
    "scripts": {
        "types": "tsc",
        "start": "vite",
        "build": "vite build",
        "rollup": "rollup -c",
        "clear": "rm *.d.ts",
        "prepublishOnly": "npm run clear && prepare components/*.jsx --types --exports"
    },
    "dependencies": {
        "@atomico/components": "latest",
        "@atomico/hooks": "latest",
        "@atomico/markdown": "latest",
        "@atomico/prepare": "latest",
        "atomico": "latest"
    },
    "devDependencies": {
        "typescript": "^4.2.4",
        "vite": "^2.1.5"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    }
}
